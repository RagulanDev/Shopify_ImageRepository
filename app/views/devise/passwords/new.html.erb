<% content_for :page_title, "Forgot your password?" %>
<br>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs container">
      <div class="field">
        <div class="control">
        <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'input'}, wrapper: false, label_html: { class: 'label' }  %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", { class: "button is-fullwidth" } %>
      </div>
  </div>
<% end %>

<div class="container">
  <%= render "devise/shared/links" %>
</div>