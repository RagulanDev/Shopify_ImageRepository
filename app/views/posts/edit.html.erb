<section class="container">
    <%= simple_form_for @post do |f| %>
        <div class="field">
            <div class="control">
            <%= f.input :name, input_html: { class: 'input', name: "name" }, wrapper: false, label_html: { class: 'label' } %>
            </div>
        </div>
        <%= f.button :submit, "Change Name", class: "button is-primary"%>
        <%= link_to "Back", @post, class:"button" %>
    <% end %>
</section>

